  "tableOperation": [
    {
      "title": "编辑",
      "type": "path",
      "options": {
        "path": "advertiser/advertiser-edit",
        "outside": false
      }
    },
    {
      "title": "查看",
      "type": "path",
      "options": {
        "outside": true,
        "path": "advertiser/advertiser-view"
      }
    },
    {
      "title": "禁用",
      "type": "request",
      "options": {
        "tips": "确定禁用广告主吗？",
        "outside": false,
        "method": "delete",
        "API": "/api/crud/advertiser/advertisers/(id)"
      },
      "expect": {
        "field": "status",
        "value": "PASS"
      }
    },
    {
      "title": "启用",
      "type": "request",
      "options": {
        "tips": "确定启用广告主吗？",
        "outside": false,
        "method": "delete",
        "API": "/api/crud/advertiser/advertisers/(id)"
      },
      "expect": {
        "field": "status",
        "value": "STOP"
      }
    },
    {
      "title": "通过",
      "type": "request",
      "options": {
        "tips": "确定通过广告主吗？",
        "outside": true,
        "method": "put",
        "API": "/api/crud/advertiser/advertisers/pass/(id)/PASS"
      },
      "expect": {
        "field": [
          "status",
          "assistantName"
        ],
        "value": [
          "PENDING_APPROVAL",
          "IS_NOT_NULL"
        ]
      }
    },
    {
      "title": "不通过",
      "type": "modal",
      "options": {
        "modalTitle": "拒绝原因",
        "modalWidth": 550,
        "outside": true,
        "items": [
          {
            "component": "Form",
            "config": {
              "layout": "Grid",
              "layoutConfig": {
                "value": [
                  24
                ]
              },
              "API": {
                "updateAPI": "/api/crud/advertiser/advertisers/pass/(id)/REFUSE"
              },
              "fields": [
                {
                  "label": "拒绝原因",
                  "type": "text-area",
                  "span": 24,
                  "field": "note",
                  "rules": [
                    {
                      "type": "required"
                    }
                  ]
                }
              ]
            }
          }
        ]
      },
      "expect": {
        "field": [
          "status",
          "assistantName"
        ],
        "value": [
          "PENDING_APPROVAL",
          "IS_NOT_NULL"
        ]
      }
    },
    {
      "title": "分配店小二",
      "type": "modal",
      "options": {
        "modalTtile": "分配店小二",
        "modalWidth": 640,
        "outside": false,
        "layout": "Empty",
        "items": [
          {
            "component": "Form",
            "config": {
              "layout": "Grid",
              "layoutConfig": {
                "value": [
                  24
                ]
              },
              "API": {
                "updateAPI": "/api/crud/advertiser/advertisers/setAssistant/(id)"
              },
              "fields": [
                {
                  "label": "选择店小二",
                  "field": "assistantId",
                  "type": "modal-radio",
                  "rules": [
                    "required"
                  ],
                  "options": {
                    "title": "选择店小二",
                    "value": "id",
                    "API": "/api/crud/cinema/user?roleCode=104",
                    "label": "name",
                    "editLabel": "assistantName",
                    "pagination": true,
                    "fields": [
                      {
                        "label": "店小二",
                        "field": "name"
                      }
                    ]
                  }
                }
              ]
            }
          }
        ]
      },
      "expect": {
        "field": "status",
        "value": "PENDING_APPROVAL",
        "permission": "advertiser.setAssistant"
      }
    },
    {
      "title": "创建计划",
      "type": "path",
      "options": {
        "outside": true,
        "path": "/advertismanage/advertingPlan/advertingPlan-help",
        "query": {
          "advertiserId": "id"
        }
      },
      "expect": {
        "field": "status",
        "value": [
          [
            "PASS",
            "STOP"
          ]
        ]
      }
    }
